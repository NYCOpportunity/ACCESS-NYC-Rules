package accessnyc.rules;
import accessnyc.response.EligibleProgram

import accessnyc.request.Person
import accessnyc.request.Household
import accessnyc.rules.income.IncomeHouseholdTotalYearly

// FairFares Rule
rule "s2_r034"
    dialect "mvel"
    
    when 
        Household(city == "NYC")
        Person( age >= 18, age <= 64)
        ( 
          (Household(members == 1) and IncomeHouseholdTotalYearly( amount <= 14580) ) or 
          (Household(members == 2) and IncomeHouseholdTotalYearly(amount <= 19720)) or
          (Household(members == 3) and IncomeHouseholdTotalYearly(amount <= 24860)) or 
          (Household(members == 4) and IncomeHouseholdTotalYearly(amount <= 30000)) or 
          (Household(members == 5) and IncomeHouseholdTotalYearly(amount <= 35140)) or 
          (Household(members == 6) and IncomeHouseholdTotalYearly(amount <= 40280)) or 
          (Household(members == 7) and IncomeHouseholdTotalYearly(amount <= 45420)) or
          (Household(members == 8) and IncomeHouseholdTotalYearly(amount <= 50560))
        
        ) 
    then
        $programcode = new EligibleProgram()
        $programcode.setCode("S2R034")
        insertLogical($programcode)

end