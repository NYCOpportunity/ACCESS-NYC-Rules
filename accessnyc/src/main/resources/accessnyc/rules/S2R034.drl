package accessnyc.rules;
import accessnyc.response.EligibleProgram

import accessnyc.request.Person
import accessnyc.request.Household
import accessnyc.rules.income.IncomeHouseholdTotalYearly


rule "s2_r034"
    dialect "mvel"
    
    when 
        Household(city == "NYC")
        Person( age >= 18, age <= 64)
        ( 
          (Household(members == 1) and IncomeHouseholdTotalYearly( amount <= 12760) ) or 
          (Household(members == 2) and IncomeHouseholdTotalYearly(amount <= 17240)) or
          (Household(members == 3) and IncomeHouseholdTotalYearly(amount <= 21720)) or 
          (Household(members == 4) and IncomeHouseholdTotalYearly(amount <= 26200)) or 
          (Household(members == 5) and IncomeHouseholdTotalYearly(amount <= 30680)) or 
          (Household(members == 6) and IncomeHouseholdTotalYearly(amount <= 35160)) or 
          (Household(members == 7) and IncomeHouseholdTotalYearly(amount <= 39640)) or
          (Household(members == 8) and IncomeHouseholdTotalYearly(amount <= 44120))
        
        ) 
    then
        $programcode = new EligibleProgram()
        $programcode.setCode("S2R034")
        insertLogical($programcode)

end
