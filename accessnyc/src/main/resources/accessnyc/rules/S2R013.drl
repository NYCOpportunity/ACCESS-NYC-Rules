package accessnyc.rules;

import accessnyc.response.EligibleProgram

import accessnyc.request.Person
import accessnyc.request.Household
import accessnyc.rules.income.IncomeHouseholdTotalYearly


rule "s2_r013 "
    dialect "mvel"
    
    when 
        Household(city == "NYC")
        Person(headOfHousehold == true, age >= 18)
        (
            (Household(members == 1) and IncomeHouseholdTotalYearly( amount <= 26900 )) 
            or (Household(members == 2) and IncomeHouseholdTotalYearly( amount <= 30700 )) 
            or (Household(members == 3) and IncomeHouseholdTotalYearly( amount <= 34550 ))
            or (Household(members == 4) and IncomeHouseholdTotalYearly( amount <= 38400 ))
            or (Household(members == 5) and IncomeHouseholdTotalYearly( amount <= 41450 ))
            or (Household(members == 6) and IncomeHouseholdTotalYearly( amount <= 44550 ))
            or (Household(members == 7) and IncomeHouseholdTotalYearly( amount <= 47600 ))
            or (Household(members == 8) and IncomeHouseholdTotalYearly( amount <= 50700 ))
        )

    then
        $programcode = new EligibleProgram()
        $programcode.setCode("S2R013")
        insertLogical($programcode)

end