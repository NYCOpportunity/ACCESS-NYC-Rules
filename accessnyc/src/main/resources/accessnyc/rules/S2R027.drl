package accessnyc.rules;

import accessnyc.response.EligibleProgram

import accessnyc.request.Person
import accessnyc.request.Household
import accessnyc.rules.income.IncomeHouseholdTotalMonthly

rule "S2R027"
    dialect "mvel"
    
    when 
        //This is a person 60 or over.
        Person( age >= 60 )
        and (
               (Household(members == 1) and IncomeHouseholdTotalMonthly(amount <= 1316))
            or (Household(members == 2) and IncomeHouseholdTotalMonthly(amount <= 1784))
            or (Household(members == 3) and IncomeHouseholdTotalMonthly(amount <= 2252))
            or (Household(members == 4) and IncomeHouseholdTotalMonthly(amount <= 2720))
            or (Household(members == 5) and IncomeHouseholdTotalMonthly(amount <= 3188))
            or (Household(members == 6) and IncomeHouseholdTotalMonthly(amount <= 3656))
            or (Household(members == 7) and IncomeHouseholdTotalMonthly(amount <= 4124))
            or (Household(members == 8) and IncomeHouseholdTotalMonthly(amount <= 4592))
            )
        
    then
        $programcode = new EligibleProgram()
        $programcode.setCode("S2R027")
        insertLogical($programcode)

end