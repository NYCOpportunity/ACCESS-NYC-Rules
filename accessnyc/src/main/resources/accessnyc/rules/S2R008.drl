package accessnyc.rules;

import accessnyc.response.EligibleProgram

import accessnyc.request.Person
import accessnyc.request.Household

import accessnyc.rules.income.IncomeHouseholdTotalMonthly

rule "s2_r008"
    dialect "mvel"
    
    when 
        Household(city == "NYC")
        Person( age <= 5, age >= 2)
        
        (
               (Household(members == 1) and IncomeHouseholdTotalMonthly(amount <= 1073))
            or (Household(members == 2) and IncomeHouseholdTotalMonthly(amount <= 1452))
            or (Household(members == 3) and IncomeHouseholdTotalMonthly(amount <= 1830))
            or (Household(members == 4) and IncomeHouseholdTotalMonthly(amount <= 2208))
            or (Household(members == 5) and IncomeHouseholdTotalMonthly(amount <= 2587))
            or (Household(members == 6) and IncomeHouseholdTotalMonthly(amount <= 2965))
            or (Household(members == 7) and IncomeHouseholdTotalMonthly(amount <= 3343))
            or (Household(members == 8) and IncomeHouseholdTotalMonthly(amount <= 3722))
        )

    then
        $programcode = new EligibleProgram()
        $programcode.setCode("S2R008")
        insertLogical($programcode)

end