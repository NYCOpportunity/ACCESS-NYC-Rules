package accessnyc.rules;

import accessnyc.response.EligibleProgram
import accessnyc.rules.income.IncomeAdultsChildrenTotalMonthly
import accessnyc.rules.income.IncomePersonMonthly 
import accessnyc.request.Household
import accessnyc.request.Person

rule "s2_r040.2 non-disabled"
    dialect "mvel"

    when 
	//You have to live in NYC
        Household(city == "NYC") 
	//And one of the children must be under 13 and related to the head of household as either a parent or step-parent
        Person( age <= 13, headOfHouseholdRelation in ("Child","StepChild")) 

          
    //And the total household income must fall in this range      
        ( 
          (Household(members == 2)  and IncomeAdultsChildrenTotalMonthly(amount <= 4578)) or
          (Household(members == 3)  and IncomeAdultsChildrenTotalMonthly(amount <= 5760)) or 
          (Household(members == 4)  and IncomeAdultsChildrenTotalMonthly(amount <= 6939)) or 
          (Household(members == 5)  and IncomeAdultsChildrenTotalMonthly(amount <= 8118)) or 
          (Household(members == 6)  and IncomeAdultsChildrenTotalMonthly(amount <= 9300)) or 
          (Household(members == 7)  and IncomeAdultsChildrenTotalMonthly(amount <= 10479)) or
          (Household(members == 8)  and IncomeAdultsChildrenTotalMonthly(amount <= 10725))
        
        ) 
        
    then
        $programcode = new EligibleProgram()
        $programcode.setCode("S2R040")
        insertLogical($programcode)

end

