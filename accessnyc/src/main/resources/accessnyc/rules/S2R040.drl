rule "s2_r040.4 non-disabled"
    dialect "mvel"
    
    when 
    //You have to live in NYC
        Household(city == "NYC") 
        IncomePersonMonthly(person.age <= 13, person.headOfHouseholdRelation not in ("Child","StepChild"), amount <= 3398)
        
    then
        $programcode = new EligibleProgram()
        $programcode.setCode("S2R040")
        insertLogical($programcode)

end
